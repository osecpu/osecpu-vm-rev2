#include "osecpu_ask.h"

    Int32s x:R00, y:R01, vx:R02, vy:R03, tx:R04, ty:R05;

    api_openWin(320, 240);
    x = 32; y = 0; vx = 8; vy = 8;
    for (;;) {
        tx = x + vx; ty = y + vy;
        if (tx < 0       ) { vx =  8; }
        if (tx > 320 - 16) { vx = -8; }
        if (ty < 0       ) { vy =  8; }
        if (ty > 240 - 16) { vy = -8; }
        x += vx; y += vy;
        api_fillOval(MODE_COL3, 7, 16, 16, x, y); // ボールを描く.
        api_sleep(0, 100);
        api_fillRect(MODE_COL3, 0, 16, 16, x, y); // ボールを消す.
    }

